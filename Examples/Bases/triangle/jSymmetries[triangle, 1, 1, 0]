{{j[triangle, (n1_)?Positive, (n2_)?Positive, (n3_)?NonPositive] :> 
   Expand[j[triangle, n1, n2, n3]]}, 
 {j[triangle, (n1_)?Positive, (n2_)?Positive, (n3_)?NonPositive] :> 
   Expand[j[triangle, n2, n1, 0]/(j[triangle, -1, 0, 0] + 
       j[triangle, 0, -1, 0] - j[triangle, 0, 0, -1] + 
       (s1 - s2 - s3)*j[triangle, 0, 0, 0])^n3]}}
